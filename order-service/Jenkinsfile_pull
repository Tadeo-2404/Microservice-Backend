pipeline {
    agent any

    tools {
        maven 'maven'
    }

    stages {
        stage('Clean Image') {
            steps {
                sh "docker stop order-service || true"
                sh "docker rm order-service || true"
            }
        }

        stage('Pull Image') {
            steps {
                sh "docker pull tadeo0303/order-service:latest"
            }
        }

        stage('Run Container') {
            steps {
                sh "docker run --name order-service -d -p 8090:8090 tadeo0303/order-service:latest"
            }
        }
    }
}
