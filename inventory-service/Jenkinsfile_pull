pipeline {
    agent any

    tools {
        maven 'maven'
    }

    stages {
        stage('Clean Image') {
            steps {
                sh "docker stop inventory-service || true"
                sh "docker rm inventory-service || true"
            }
        }

        stage('Pull Image') {
            steps {
                sh "docker pull tadeo0303/inventory-service:latest"
            }
        }

        stage('Run Container') {
            steps {
                sh "docker run --name inventory-service -d -p 8090:8090 tadeo0303/inventory-service:latest"
            }
        }
    }
}
